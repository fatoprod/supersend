rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // SuperSend logo uploads
    match /supersend/{userId}/logos/{fileName} {
      allow read: if true; // Public read for logo URLs in emails
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024 // Max 2MB
                   && request.resource.contentType.matches('image/(png|jpeg|gif|webp|svg\\+xml)');
    }
    
    // SuperSend template assets
    match /supersend/{userId}/assets/{fileName} {
      allow read: if true; // Public read for template assets
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }

    // SuperSend campaign attachments
    match /supersend/{userId}/attachments/{campaignId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024; // Max 10MB per file
    }
  }
}
