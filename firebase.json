{
  "hosting": {
    "target": "supersend",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "codebase": "supersend",
    "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
  },
  "firestore": {
    "database": "supersend-bd",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
